{
  "version": 2,
  "builds": [
    { "src": "api/index.php", "use": "vercel-php@0.6.0" },
    { "src": "vite.config.js", "use": "@vercel/static-build" }
  ],
  "routes": [
    { "src": "/build/(.*)", "dest": "public/build/$1" },
    { "src": "/(.*)", "dest": "public/index.php" }
  ],
  "env": {
    "APP_NAME": "Absensi Magang",
    "APP_ENV": "production",
    "APP_KEY": "base64:ISI_APP_KEY_KAMU", 
    "APP_DEBUG": "false",
    "APP_URL": "https://absensi-magang.vercel.app",
    "APP_TIMEZONE": "Asia/Jakarta",

    "LOG_CHANNEL": "stderr",
    "LOG_LEVEL": "debug",

        "DB_HOST": "xxx.filess.io",
        "DB_PORT": "3306",
        "DB_DATABASE": "absensi_magang",
        "DB_USERNAME": "absensi_user",
        "DB_PASSWORD": "AbsensiMagang2024!",


    "SESSION_DRIVER": "cookie",
    "CACHE_DRIVER": "array",

    "APP_CONFIG_CACHE": "/tmp/config.php",
    "APP_EVENTS_CACHE": "/tmp/events.php",
    "APP_PACKAGES_CACHE": "/tmp/packages.php",
    "APP_ROUTES_CACHE": "/tmp/routes.php",
    "APP_SERVICES_CACHE": "/tmp/services.php",
    "VIEW_COMPILED_PATH": "/tmp"
  },
  "outputDirectory": "public"
}
